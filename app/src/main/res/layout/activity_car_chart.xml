<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.datang.datangcarmanager.presentation.activity.CarChartActivity">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/car_chart_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:src="@drawable/abc_ic_ab_back_holo_dark"/>
            <TextView
                android:id="@+id/back_title_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_btn"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/white"
                android:text="返回"
                android:textSize="@dimen/toolbar_back_title_size"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/back_title_btn"
                android:layout_toLeftOf="@+id/more_info_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="苏EDNA07"
                android:textSize="@dimen/toolbar_title_size"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@id/more_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/transparent"
                android:text="更多"
                android:textSize="@dimen/toolbar_back_title_size"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/car_chart_datepicker_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/car_chart_toolbar"
        android:layout_centerVertical="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/left_day_pick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="10月"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:background="@drawable/trace_time_left"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/date_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="2016-11"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/right_day_pick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="12月"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:background="@drawable/trace_time_right"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/car_chart_datepicker_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/btn_default_disabled_focused_holo_light">
                <TextView
                    android:id="@+id/oil_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="日耗油量"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/oil_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/oil_title"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="单位: 升"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/oil_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/oil_unit"
                    android:layout_margin="16dp"
                    android:layout_centerHorizontal="true">

                </com.github.mikephil.charting.charts.BarChart>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_default_disabled_focused_holo_light">
                <TextView
                    android:id="@+id/mileage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="日行驶里程"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/mileage_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mileage_title"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="单位: 公里"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/mileage_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/mileage_unit"
                    android:layout_margin="16dp"
                    android:layout_centerHorizontal="true">

                </com.github.mikephil.charting.charts.BarChart>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_default_disabled_focused_holo_light">
                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="日行驶时间"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/time_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_title"
                    android:layout_marginTop="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="单位: 小时"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/time_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/time_unit"
                    android:layout_margin="16dp"
                    android:layout_centerHorizontal="true">

                </com.github.mikephil.charting.charts.BarChart>
            </RelativeLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>
