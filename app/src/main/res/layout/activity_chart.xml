<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.datang.datangcarmanager.presentation.activity.ChartActivity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chart_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:src="@drawable/abc_ic_ab_back_holo_dark"/>
            <TextView
                android:id="@+id/back_title_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_btn"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/white"
                android:text="返回"
                android:textSize="@dimen/toolbar_back_title_size"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/back_title_btn"
                android:layout_toLeftOf="@+id/more_info_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="勒夫卡(北京)科技有限公司"
                android:textSize="@dimen/toolbar_title_size"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@id/more_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/transparent"
                android:text="更多"
                android:textSize="@dimen/toolbar_back_title_size"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/chart_datepicker_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/chart_toolbar"
        android:layout_centerVertical="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/left_day_pick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="10月"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:background="@drawable/trace_time_left"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/date_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="2016-11"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/right_day_pick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="12月"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:background="@drawable/trace_time_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="26dp"
        android:layout_below="@+id/chart_datepicker_bar">

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:text="下属部门"
            android:gravity="right"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chart_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/warming_tv"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cell_background">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/chart_recycler_view"
            android:text="统计次数"/>
        <TextView
            android:id="@+id/warming_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:text="排名根据部门下所有车辆平均值计算，仅供参考。"/>

    </RelativeLayout>

</RelativeLayout>
