<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.datang.datangcarmanager.presentation.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="1dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="1">
        <!--企业车辆-->
        <android.support.v7.widget.CardView
            android:id="@+id/enterprise_car_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="#308be0"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="企业车辆"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title1"
                    android:layout_marginTop="20dp"
                    android:scaleType="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_track"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!--电子栅栏-->
        <android.support.v7.widget.CardView
            android:id="@+id/electronic_fence_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="#af399e"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="电子栅栏"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title2"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fence"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!--事件提醒-->
        <android.support.v7.widget.CardView
            android:id="@+id/remind_mail_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            app:cardBackgroundColor="#e44e28"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="事件提醒"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title3"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mail"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="1">

        <!--车辆搜索-->
        <android.support.v7.widget.CardView
            android:id="@+id/search_car_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="#3c4bce"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="车辆搜索"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title4"
                    android:layout_marginTop="5dp"
                    android:scaleType="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_search"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!--统计分析-->
        <android.support.v7.widget.CardView
            android:id="@+id/statistics_analyze_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="#51b03e"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="统计分析"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title5"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_stat"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!--系统设置-->
        <android.support.v7.widget.CardView
            android:id="@+id/system_setting_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            app:cardBackgroundColor="#e97428"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="系统设置"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/main_activity_lable_size"/>

                <ImageView
                    android:layout_below="@+id/title6"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_setting"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>